<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">


        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        <!-- bxSlider Javascript file -->
        <script src="Scripts/jquery.bxslider.min.js"></script>
        <!-- bxSlider CSS file -->
        <link href="Content/jquery.bxslider.css" rel="stylesheet" />
       
    </head>
    <body>
        <header>
            <div class="content-wrapper" id="top">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Button Name", "Index", null, new { @class="optivetLogoSign" })</p>
                </div>
                <div class="float-right">
                    <section id="login">
                       @* @Html.Partial("_LoginPartial")*@
                    </section>
                    <nav>
                        <ul id="menu">
                            @{ 
                                var currentController = ViewContext.RouteData.Values["controller"] as string ?? "Home";
                                var currentAction = ViewContext.RouteData.Values["action"] as string ?? "Index";
                                var currentPage = (currentController + "-" + currentAction ).ToLower();
                             }


                            <li><span class="fontAwesomeNav"><i class="fa fa-home" style="color:white"></i></span>@Html.ActionLink("Начало", "Index", "Home", null, new { @class = currentPage == "home-index" ? "current" : "" , @style="padding-left:20px" })</li>
                            <li><span class="fontAwesomeNav"><i class="fa fa-users" style="color:white"></i></span>@Html.ActionLink("За нас", "About", "Home", null, new { @class = currentPage == "home-about" ? "current" : "" , @style="padding-left:20px" })</li>
                            <li><span class="fontAwesomeNav"><i class="fa fa-question-circle" style="color:white"></i></span>@Html.ActionLink("Въпроси", "Faq", "Home", null, new { @class = currentPage == "home-faq" ? "current" : "" , @style="padding-left:20px" })</li>
                            @*<li><span class="fontAwesomeNav"><i class="fa fa-book" style="color:white"></i></span>@Html.ActionLink("Статий", "Faq", "Home", null, new { @class = currentPage == "home-faq" ? "current" : "" , @style="padding-left:20px" })</li>*@
                            <li><span class="fontAwesomeNav"><i class="fa fa-envelope" style="color:white"></i></span>@Html.ActionLink("За Контакти", "Contact", "Home", null, new { @class = currentPage == "home-contact" ? "current" : "" , @style="padding-left:20px" })</li>
                        </ul>
                    </nav>
                        <p id="contactUsToday"> Свържете се с нас! <i class="fa fa-phone fa-2x"></i><span id="frontPageNumber"> 0888 412 765</span>
                            <a href="www.facebook.com"><img src="/Content/SiteImages/fb29.png"/></a>
                            <a href="www.facebook.com"><img src="/Content/SiteImages/ig29.png"/></a>
                        </p>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
